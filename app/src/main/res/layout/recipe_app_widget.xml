<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appwidget_tv_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textColorPrimary"
            tools:text="Nuttela Pie" />

        <ImageView
            android:id="@+id/appwidget_iv_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:src="@drawable/ic_video_replacement" />
    </LinearLayout>

    <GridView
        android:id="@+id/appwidget_list_ingredients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="?attr/dropdownListPreferredItemHeight"
        android:layout_margin="8dp"
        android:numColumns="1" />
</LinearLayout>